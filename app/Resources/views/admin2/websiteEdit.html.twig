{% extends "admin2/header.html.twig" %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block title %}<title>Edit website</title>{% endblock %}
{% block content %}
    {{ parent() }}
    <div class = "container">
        <h3 class="page-header">
            Edit website
        </h3>
        <form action="/profile/website/save?_method={{ method }}" class="form-horizontal" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" class="website_id" value="{{ website.id }}"/>
            <div class="form-group">
                <label class="control-label col-lg-2" for="name">Name</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="name" name="name" value="{{ website.name }}" maxlength="255" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2" for="url">Url</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="url" name="url" value="{{ website.url }}" maxlength="255" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-2" for="status">Status</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="status" name="status" value="{{ website.status }}"  required/>
                </div>
            </div>
            {% if website.id != NULL %}
                <div class="form-group" id = "users_typeahead">
                    <label class="control-label col-lg-2" for="owner">Owner</label>
                    <div class="col-lg-10">
                        <input type="text" readonly="true" class="form-control" id="owner" name="owner" value="{{ website.owner }}"/>
                    </div>
                </div>
            {% else %}
                <div class="form-group" id = "users_typeahead">
                    <div class="col-lg-10">
                        <input type="hidden" class="form-control" id = "owner" name="owner" value="{{ user.id }}" maxlength="255" required/>
                    </div>
                </div>
            {% endif %}
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="#" class="btn btn-success saveNotifyingList" data-ajax-method="post">Save notifying</a>
                <a href="javascript:history.back()" class="btn btn-default" data-dismiss="modal">Close</a>
            </div>
        </form>

        <div>
            <div>
                <div class="holder">
                    <div class="container-fluid" ng-app="myApp">
                        <div class="container" ng-controller="ctrlDualList">
                            <div class="row">
                                <div class="col-md-12 text-center"><h3>Users for notifying</h3></div>
                                <div class="col-sm-4 col-sm-offset-1">
                                    <div class="list-group left">
                                        <a href="#" class="list-group-item active">Not notify</a>
                                        <ul class="source connected item">
                                            {% for user in notNotify %}
                                                <li>
                                                    <a href="#" class="list-group-item">{{user.username}}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-2 v-center text-center">
                                    <div class="btn-group">
                                        <i class="fa fa-angle-left"></i>
                                        <i class="fa fa-angle-right"></i>
                                    </div>
                                    <h6 class="text-center">move from list-to-list</h6>
                                </div><!--/col-2-->
                                <div class="col-sm-4">
                                    <div class="right">
                                        <a href="#" class="list-group-item active">Notify</a>
                                        <ul class="target connected item notifyingList">
                                            {% for user in notify %}
                                                <li>
                                                    <a href="#" class="list-group-item">{{user.user}}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}