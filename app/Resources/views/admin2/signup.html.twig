{% extends "admin2/index.html.twig" %}

{% block title %}Sign up{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    {{ parent() }}
    {% block body %}{% endblock %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Registration</h3>
                </div>
                <div class="panel-body">
                    {#{{ form_start(form) }}#}
                    {#{{ form_row('form.username') }}#}
                    {#{{ form_row('form.email') }}#}
                    {#{{ form_row('form.plainPassword.first') }}#}
                    {#{{ form_row('form.plainPassword.second') }}#}

                    {#<button type="submit">Register!</button>#}
                    {#{{ form_end(form) }}#}
                    <form action="/register" method="POST" class="fos_user_registration_register">
                        <input type="hidden" value="1" name="submit">
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                        <input type="text" class="form-control" name="username" value="" placeholder="login" maxlength="255" required />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
                        <input type="email" class="form-control" name="email" value="" placeholder="email" maxlength="255" required />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
                        <input type="password" class="form-control" name="password" value="" placeholder="password" required />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
                        <input type="password" class="form-control" name="password2" value="" placeholder="repeat password" required />
                    </div>
                        <div class="panel-footer">
                            <input type="submit" value="Registration" />
                        </div>
                    </form>
                </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}