{% extends "admin2/dashboard.html.twig" %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block title %}<title>Available websites</title>{% endblock %}
{% block content %}
    {% block sidenav %}
        {{ parent() }}
    {% endblock %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Profile</h1>
                <a href="/profile/website/edit" class="btn btn-primary navbar-btn dialog" data-ajax-method="get">Create website</a>
                <a href="#" class="btn btn-success navbar-btn dialog" data-ajax-method="post">Save notifying</a>
            </div>
        </div>
        <!-- /.row -->
    <div class="container">
            <div class="clearfix">
                <form action="/profile/website/notification/save" class="form-horizontal" method="POST" enctype="multipart/form-data">
                    <input type="hidden" value="{{ user.id }}" name="user">
                    <table class="table table-hover grid">
                        <thead>
                        <tr>
                            <th width="40px">Id</th>
                            <th width="160px">Name</th>
                            <th width="160px">Url</th>
                            <th width="160px">Status</th>
                            <th width="160px">Notify</th>
                            <th width="50px"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for website in websites %}
                            <tr>
                                <td>{{ website.id }}</td>
                                <td>{{ website.name }}</td>
                                <td>{{ website.url }}</td>
                                <td>{{ website.status }}</td>
                                <td><input type="checkbox" name = "website" value="{{ website.id }}"></td>
                                <td class="controls">
                                    <a href="{{ path('editWebsite', {'id':website.id}) }}" class="btn btn-primary btn-xs dialog" data-ajax-method="get" data-modal-style="width:800px">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="{{ path('deleteWebsite', {'id':website.id}) }}" class="confirm btn btn-xs btn-danger ajax" data-ajax-method="delete">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}